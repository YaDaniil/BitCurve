<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/tx_item_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+14 670 UAH"
        android:transitionName="@string/transition_amount"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/amount_small_text_size"
        android:id="@+id/amount"
        android:layout_marginStart="@dimen/standard_dimen"
        android:layout_marginLeft="@dimen/standard_dimen" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="@dimen/half_standard_dimen"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:id="@+id/from_to"
            android:singleLine="true"
            android:layout_marginBottom="6dp"
            android:text="From Jax Lightning" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/time"
            android:singleLine="true"
            android:gravity="end"
            android:text="2 days ago"/>

    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_gravity="center_vertical"
        android:layout_height="40dp"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>


</LinearLayout>